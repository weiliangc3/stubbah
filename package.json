{
  "name": "stubbah",
  "version": "1.0.0",
  "description": "It's a stub server+",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node dist/server/index.js",
    "start:https": "npm run build && node dist/server/index.js && node build --https",
    "start:watch": "nodemon --config config/nodemonAll.json",
    "start:watch-fe": "npm run build:server && nodemon --config config/nodemonFe.json",
    "start:watch-server": "nodemon --config config/nodemonServer.json",
    "build": "npm run build:fe && npm run build:server",
    "build:fe": "npm run build:static && npm run build:fe-js",
    "build:static": "node config/copyStaticFiles.js",
    "build:server": "npm run build:server-types && npm run build:server-js",
    "build:server-types": "tsc --emitDeclarationOnly",
    "build:server-js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build:fe-js": "webpack --mode=production",
    "clean": "node config/cleanFolder.js",
    "lint": "eslint 'src/**/*.ts' --fix",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch"
  },
  "author": "Wei",
  "license": "ISC",
  "dependencies": {
    "@types/axios": "^0.14.0",
    "@types/styled-components": "^5.1.7",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.1",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.1",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.0",
    "@babel/preset-env": "^7.13.5",
    "@babel/preset-react": "^7.12.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.31",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@types/react-router-dom": "^5.1.7",
    "@types/yargs": "^16.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "babel-loader": "^8.2.2",
    "eslint": "^7.20.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.2",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.5.0"
  }
}
